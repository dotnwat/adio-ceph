#ifndef ORCA_CONFIG_H
#define ORCA_CONFIG_H

#include "opal_config.h"

#define ORCA_IDENT_STRING OPAL_IDENT_STRING

#if defined(__WINDOWS__)

#  if defined(_USRDLL)    /* building shared libraries (.DLL) */
#    if defined(ORCA_EXPORTS)
#      define ORCA_DECLSPEC         __declspec(dllexport)
#      define ORCA_MODULE_DECLSPEC
#    else
#      if defined(ORCA_IMPORTS)
#        define ORCA_DECLSPEC       __declspec(dllimport)
#      else
#        define ORCA_DECLSPEC
#      endif  /*defined(ORCA_IMPORTS)*/
#      if defined(ORCA_MODULE_EXPORTS)
#        define ORCA_MODULE_DECLSPEC __declspec(dllexport)
#      else
#        define ORCA_MODULE_DECLSPEC __declspec(dllimport)
#      endif  /* defined(ORCA_MODULE_EXPORTS) */
#    endif  /* defined(ORCA_EXPORTS) */
#  else          /* building static library or external includes */
#    if defined(ORCA_IMPORTS)
#      define ORCA_DECLSPEC        __declspec(dllimport)
#    else
#      define ORCA_DECLSPEC
#    endif  /* defined(ORCA_IMPORTS) */
#    define ORCA_MODULE_DECLSPEC
#  endif

#else

#  if OPAL_C_HAVE_VISIBILITY
#    define ORCA_DECLSPEC           __opal_attribute_visibility__("default")
#    define ORCA_MODULE_DECLSPEC    __opal_attribute_visibility__("default")
#  else
#    define ORCA_DECLSPEC
#    define ORCA_MODULE_DECLSPEC
#  endif
#endif  /* defined(__WINDOWS__) */

#endif
